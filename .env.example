# =============================================================================
# Environment Variables - FastAPI Boilerplate
#
# Copy this file to .env and configure your values.
# =============================================================================

# =============================================================================
# Application
# =============================================================================
APP_NAME="FastAPI Boilerplate"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# API Settings
# =============================================================================
API_V1_PREFIX=/api/v1

# IMPORTANT: Generate a secure secret key for production!
# Run: make generate-secret
SECRET_KEY=dev-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
REFRESH_TOKEN_EXPIRE_DAYS_REMEMBER_ME=30

# Cookie Settings
COOKIE_SECURE=false  # Set to true in production (HTTPS only)
COOKIE_SAMESITE=lax
# COOKIE_DOMAIN=  # Optional: For subdomains

# CORS - Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:5173"]

# =============================================================================
# PostgreSQL
# NOTE: Remove this section if not using PostgreSQL
# =============================================================================
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_dev_password
POSTGRES_DB=app_db
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10

# =============================================================================
# MongoDB
# NOTE: Remove this section if not using MongoDB
# =============================================================================
MONGODB_URL=mongodb://app_admin:app_mongo_password@localhost:27017/app_db?authSource=admin
MONGODB_DB=app_db
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_POOL_SIZE=50

# =============================================================================
# Telegram Alerts (Optional)
# NOTE: Remove this section if not using Telegram alerts
# =============================================================================
TELEGRAM_ALERTS_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
